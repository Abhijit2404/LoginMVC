@model IEnumerable<LoginMVC.Models.Hospital>
@{
    ViewData["Title"] = "Home";
}

<style>
    .col-4{
        display:flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
    }

    .card {
        font-family: "Roboto", sans-serif;
        display: block;
        top: 0px;
        position: relative;
        max-width: 350px;
        background-color: #f2f8f9;
        border-radius: 4px;
        padding: 32px 24px;
        margin: 12px;
        text-decoration: none;
        z-index: 0;
        overflow: hidden;
        border: 1px solid #f2f8f9; 
        transition: box-shadow 0.2s ease-in-out, transform 0.35s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 11px 11px 0 rgba(0, 0, 0,.16);
        transform: translateY(-5px);
    }
</style>

<div class="row">
    @if(Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="https://static.toiimg.com/photo/imgsize-704065,msid-74034555/74034555.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Address</p>
                        <p class="card-text">@item.Zipcode</p>
                        <p class="card-text">@item.City</p>
                        <p class="card-text">@item.State</p>
                        <p class="card-text">@item.Country</p>
                    </div>
                </div>
            </div>
        }
    }
    
</div>


