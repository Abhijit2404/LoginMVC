@model LoginMVC.Models.UserCreate

@{
    ViewData["Title"] = "Create";
}

<style>
    .row{
        display:flex;
        justify-content:center;
        align-items: center;
    }

    h4{
        margin-bottom:20px;
    }

    .error{
        color:red;
        font-size:15px;
    }
</style>

<h4 align="center">Add User</h4>
<p align="center" class="error">@TempData["Error"]</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" style="text-decoration: none;" class = "text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label" placeholder="First Name"></label>
                <input asp-for="FirstName" class="form-control "/>
                <span class="error" asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control "/>
                <span class="error" asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control "/>
                <span class="error" asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control "/>
                <span class="error" asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="UserHospitalId" class="control-label"></label>
                <input asp-for="UserHospitalId" class="form-control "/>
                @* <span asp-validation-for="UserHospitalId" class="text-danger"></span> *@
            </div>
            <div class="form-group" style="text-align: center">
                <input style="margin-right: 10px" type="submit" value="Create" class="btn btn-primary">
                <input type="submit" value="Cancel" asp-action="Index" class="btn btn-danger">
            </div>
        </form>
    </div>
</div>


