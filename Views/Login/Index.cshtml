@model LoginMVC.Models.UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Phynd | Login</title>
    <style>
		.login-page {
			width: 360px;
			padding: 8% 0 0;
			margin: auto;
		}
		.form p{
			color: #c22f3d;
			font-size: .8rem;
		}
		.form {
		  position: relative;
		  border-radius: 5px;
		  z-index: 1;
		  background: #FFFFFF;
		  max-width: 360px;
		  margin: 0 auto 100px;
		  padding: 45px;
		  text-align: center;
		  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
		}
		.form input {
		  font-family: "Roboto", sans-serif;
		  outline: 0;
		  background: #f2f2f2;
		  border-radius: 4px;
		  letter-spacing: .5px;
		  width: 100%;
		  border: 0;
		  margin: 0 0 15px;
		  padding: 15px;
		  box-sizing: border-box;
		  font-size: 14px;
		}
		.form button {
		  font-family: "Roboto", sans-serif;
		  font-weight: bold;
		  text-transform: uppercase;
		  letter-spacing: 2px;
		  outline: 0;
		  background: #4CAF50;
		  border-radius: 4px;
		  width: 100%;
		  border: 0;
		  padding: 15px;
		  color: #FFFFFF;
		  font-size: 14px;
		  -webkit-transition: all 0.3 ease;
		  transition: all 0.3 ease;
		  cursor: pointer;
		}
		.form button:hover,.form button:active,.form button:focus {
		  background: #43A047;
		}
		.form .message {
		  margin: 15px 0 0;
		  color: #b3b3b3;
		  font-size: 12px;
		}
		.form .message a {
		  color: #4CAF50;
		  text-decoration: none;
		}
		.container {
		  position: relative;
		  z-index: 1;
		  max-width: 300px;
		  margin: 0 auto;
		}
		.container:before, .container:after {
		  content: "";
		  display: block;
		  clear: both;
		}
		.container .info {
		  margin: 50px auto;
		  text-align: center;
		}
		.container .info h1 {
		  margin: 0 0 15px;
		  padding: 0;
		  font-size: 36px;
		  font-weight: 300;
		  color: #1a1a1a;
		}
		.container .info span {
		  color: #4d4d4d;
		  font-size: 12px;
		}
		.container .info span a {
		  color: #000000;
		  text-decoration: none;
		}
		.container .info span .fa {
		  color: #EF3B3A;
		}
		body {
		  background: #5188e0; /* fallback for old browsers */
		  background: -webkit-linear-gradient(right, #76b852, #8DC26F);
		  background: -moz-linear-gradient(right, #5188e0, #8DC26F);
		  background: -o-linear-gradient(right, #5188e0, #8DC26F);
		  background: linear-gradient(to left, #5188e0, #8DC26F);
		  font-family: "Roboto", sans-serif;
		  -webkit-font-smoothing: antialiased;
		  -moz-osx-font-smoothing: grayscale;      
		}

	</style>
</head>
<body>
    <div id="login-div" style="margin-top:7%">
        @using (Html.BeginForm("LoginUser", "Login", FormMethod.Get))
        {
            <div class="login-page">
                <div class="form">
                    <form class="login-form">
						<img style="width:120px;height:60px;object-fit:cover;" src="~/lib/Logo.png">
						<p>@TempData["Message"]</p>
						<input type="hidden"/>@Html.EditorFor(model => model.Email,new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
						<input type="hidden"/>@Html.EditorFor(model => model.Password,new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
						<button type="submit" value="Login">Login</button>
                    </form>
                </div>
            </div>
        }
    </div>
</body>
</html>